{
  "name": "vite-electron",
  "version": "0.0.1",
  "scripts": {
    "web:dev": "vite",
    "web:build": "tsc && vite build",
    "electron:compile": "tsc --outDir dist/ src/electron.ts",
    "electron:dev": "npm run electron:compile && electron dist/electron.js",
    "dev": "cross-env NODE_ENV=development concurrently -k \"npm run web:dev\" \"npm run electron:dev\""
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@vitejs/plugin-react": "^3.1.0",
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "electron": "^23.1.4",
    "typescript": "^4.9.3",
    "vite": "^4.2.0"
  }
}
